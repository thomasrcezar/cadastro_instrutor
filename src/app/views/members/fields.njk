<div class="item">
    <div>Avatar URL</div>
    <div><input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}"></div>
</div>

<div class="item">
    <div>Mebro</div>
    <div><input type="text" name="name" placeholder="Nome do Mebro" value="{{member.name}}"></div>
</div>

<div class="item">
    <div>E-mail</div>
    <div><input type="email" name="email" placeholder="digite seu e-mail" value="{{member.email}}"></div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div><input type="date" name="birth" value="{{member.birth}}"></div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if member.gender == 'M' %} checked="checked" {% endif %}>Masculino</span>
        <span>
            <input type="radio" name="gender" value="F" {% if member.gender == 'F' %} checked="checked" {% endif %}>Feminino</span>
    </div>
</div>
<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood" id="">
            <option value="A+" {% if member.blood == "A+" %} selected="selected" {% endif %}>A+</option>
            <option value="A-" {% if member.blood == "A-" %} selected="selected" {% endif %}>A-</option>
            <option value="B+" {% if member.blood == "B+" %} selected="selected" {% endif %}>B+</option>
            <option value="B-" {% if member.blood == "B-" %} selected="selected" {% endif %}>B-</option>
            <option value="AB+" {% if member.blood == "AB+" %} selected="selected" {% endif %}>AB+</option>
            <option value="AB-" {% if member.blood == "AB-" %} selected="selected" {% endif %}>AB-</option>
            <option value="O+" {% if member.blood == "O+" %} selected="selected" {% endif %}>O+</option>
            <option value="O-" {% if member.blood == "O-" %} selected="selected" {% endif %}>O-</option>
        </select>
    </div>

    <div class="item">
        <div>Peso (kg)</div>
        <div>
            <input type="number" name="weight" value="{{member.weight}}">
        </div>
    </div>
    <div class="item">
        <div>Altura (cm)</div>
        <div>
            <input type="number" name="height" value="{{member.height}}">
        </div>
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <select name="instructor" id="">
            {% for instructor in instructorOptions %}

                <option value="{{instructor.id}}" {% if member.instructor_id == instructor.id %} selected="selected" {% endif %}>{{instructor.name}}
                {% endfor %}
            </option>

        </select>
    </div>

    <button type="submit">Salvar</button>