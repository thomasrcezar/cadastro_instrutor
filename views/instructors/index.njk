        <table>
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atentimento</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td>{{instructor.name}}</td>
                    <td>{{instructor.services}}</td>
                </tr>
                    
                {% endfor %}
            </tbody>
        </table>

    </section>
</div>

{% endblock %}